@model Blue_Fin_Inc.Models.Livestock

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Livestock</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Picture
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/images/"+Model.ImageName)" asp-append-version="true" width="150px" height="150px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @{
                var temp = (Math.Truncate(Model.Price * 100) / 100).ToString("n2");
                @Html.DisplayFor(model => temp)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Colours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Colours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CareLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CareLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Temperment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Temperment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WaterConditions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WaterConditions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaxSize)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaxSize)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Stock > 0)
    {
        @Html.ActionLink("Add to Order", "Check", "Order", new { id = Model.ProductCode, productType = "Livestock" })
    }
    @if (Model.Stock == 0)
    {
        @Html.ActionLink("Zero Stock Available", "Index", new { /*id = item.ProductCode, productType = "Livestock" */})
    }
    |
    <a asp-action="Index">Back to All Livestock</a>
</div>
