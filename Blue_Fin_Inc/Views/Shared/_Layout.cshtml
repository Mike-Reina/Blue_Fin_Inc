<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blue Fin Inc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=KoHo" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img src="@("~/images/BlueFinLogo.jpg")" asp-append-version="true" width="50px" height="50px" asp-area="" asp-controller="Home" asp-action="Index">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Blue Fin Inc</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Equipment" asp-action="Index">Equipment |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Livestock" asp-action="Index">Livestock |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="Details">My Order |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Equipment" asp-action="EditIndex">Modify Equipment |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Livestock" asp-action="EditIndex">Modify Livestock |</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            <div id="privacyFacebook">
            &copy; <span id="year"></span> Blue Fin Inc  <a href="http://www.facebook.com/" target="_blank"> <i class="fab fa-facebook"></i> </a> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> 
            </div>
            <div id="address">
                <a href="https://www.google.com/maps/dir/53.3443384,-6.282142/SEAHORSE+AQUARIUMS+UNIT+3%2F4B+WELLTEL+HOUSE+SAINT+JOAN'S+INDUSTRIAL+ESTATE+BALLYMOUNT+ROAD+DUBLIN+22+D22+DP62/" target="_blank">Saint Joans's Industrial Estate, Ballymount Rd, Dublin, D22 DP62 </a>
                <a href="tel:+35314595650"> +35314595650 </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
