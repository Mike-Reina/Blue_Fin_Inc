    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductCode" />
        <span id="confirmDeleteSpan_@Model.ProductCode" style="display:none">
            <span><strong>This is a permanent delete, do yo want to continue?</strong></span>
            <button type="submit" class="btn btn-danger">Yes</button>
            <a href="#" class="btn btn-primary" onclick="confirmDelete('@Model.ProductCode', false)">No</a>
        </span>

        <span id="deleteSpan_@Model.ProductCode">
            <a href="#" class="btn btn-danger" onclick="confirmDelete('@Model.ProductCode', true)">Delete</a>
        </span>
    </form>
