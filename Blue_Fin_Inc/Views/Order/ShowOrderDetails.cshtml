@model Blue_Fin_Inc.Models.Order

@{
    ViewData["Title"] = "ShowOrderDetails";
}

<h3>Order Details</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Eircode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Eircode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderPrice)
        </dt>
        <dd class="col-sm-10">
            @{
                var temp = (Math.Truncate(Model.OrderPrice * 100) / 100).ToString("n2");
                @Html.DisplayFor(model => temp)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContainsLivestock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContainsLivestock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderDetails)
        </dd>
    </dl>
</div>
<div>
    <a id="editLink" asp-action="Edit" asp-route-id="@Model.OrderNo">Edit</a> |
    <a asp-action="Index" class="allBackLinks">Back to List</a>
</div>
