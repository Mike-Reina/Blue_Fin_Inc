@model Blue_Fin_Inc.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<h4>Are you sure you want to delete this order?</h4>
<div>
    <hr>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Eircode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Eircode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContainsLivestock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContainsLivestock)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderNo" />
        <span id="confirmDeleteSpan_@Model.OrderNo" style="display:none">
            <span><strong>This is a permanent delete, do yo want to continue?</strong></span>
            <button type="submit" class="btn btn-danger">Yes</button>
            <a href="#" class="btn btn-primary" onclick="confirmDelete('@Model.OrderNo', false)">No</a>
        </span>

        <span id="deleteSpan_@Model.OrderNo">
            <a href="#" class="btn btn-danger" onclick="confirmDelete('@Model.OrderNo', true)">Delete</a>
        </span>
    </form>
</div>
<div>
    <a asp-action="Index">Back to Orders</a>
</div>